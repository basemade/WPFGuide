    <Window x:Class="WPFGuide.QQMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGuide"
        mc:Ignorable="d"
        Title="gagaWindow" Height="auto" Width="300" ResizeMode="NoResize" SizeToContent="Height" >


    <Grid>
        <ListBox Margin="5">
            <CheckBox x:Name="checkboxTom" Content="Tom"/>
            <CheckBox x:Name="checkboxLam" Content="Lam"/>
            <CheckBox x:Name="checkboxJoe" Content="Joe"/>
            <Button x:Name="buttonMess" Content="Mess"/>
            <Button x:Name="buttonOwen" Content="Owen"/>
            <Button x:Name="buttonVictor" Content="Victor" Click="buttonVictor_Click"/>
        </ListBox>
    </Grid>

        
    <!--ItemsControl 能夠使用對應的 ItemContainer 自動包裝多條內容-->
