<!--PPMainWindow.xaml，從字母P開始排序，進行測試-->
<!--往後測試請以字母P的檔案去clone-->
    <Window x:Class="WPFGuide.PPMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGuide"
        mc:Ignorable="d"
        Title="gagaWindow" Height="auto" Width="300" ResizeMode="NoResize" SizeToContent="Height" >
        <!--第一行 x:Class="WPFGuide.PPMainWindow"，與檔名 PMainWindow.xaml 無關，
        但需對應到 PMainWindow.xaml.cs 的 public partial class PPMainWindow : Window-->

    <Grid>
        <ListBox Margin="5">
            <CheckBox x:Name="checkboxTom" Content="Tom"/>
            <CheckBox x:Name="checkboxLam" Content="Lam"/>
            <CheckBox x:Name="checkboxJoe" Content="Joe"/>
            <Button x:Name="buttonMess" Content="Mess"/>
            <Button x:Name="buttonOwen" Content="Owen"/>
            <Button x:Name="buttonVictor" Content="Victor" Click="buttonVictor_Click"/>
        </ListBox>
    </Grid>

</Window>
